<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!-- This image style makes an iconn appear disabled. -->
    <Style TargetType="{x:Type Image}" x:Key="DisableableIcon">
        <Style.Triggers>
            <Trigger Property="IsEnabled" Value="False">
                <Setter Property="Opacity" Value="0.3"/>
            </Trigger>
        </Style.Triggers>
    </Style>

    <BitmapImage x:Key="ConnectIcon" UriSource="../Icons/arrow-24x24.png"/>
    <BitmapImage x:Key="RefreshIcon" UriSource="../Icons/arrow-circle-double-135-24x24.png"/>
    <BitmapImage x:Key="ConnectedIcon" UriSource="../Icons/plug-connect-16x16.png"/>
    <BitmapImage x:Key="DisconnectedIcon" UriSource="../Icons/plug-disconnect-16x16.png"/>
    
    <BitmapImage x:Key="RemoveIcon" UriSource="../Icons/minus-16x16.png"/>
    <BitmapImage x:Key="BrowseFileSystemIcon" UriSource="../Icons/folder-horizontal-open-16x16.png"/>
    <BitmapImage x:Key="BrowseSourceControlIcon" UriSource="../Icons/server-cloud-16x16.png"/>
    <BitmapImage x:Key="ManualEntryIcon" UriSource="../Icons/keyboard--pencil-16x16.png"/>
    
</ResourceDictionary>